<RibbonWindow x:Class="AudioTAGEditor.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:AudioTAGEditor"
              xmlns:prism="http://prismlibrary.com/"
              prism:ViewModelLocator.AutoWireViewModel="True"
              xmlns:tx="clr-namespace:ExplorerTreeView;assembly=ExplorerTreeView"
              mc:Ignorable="d"
              Title="Audio TAG Editor"
              Height="450"
              Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu>
                    <RibbonApplicationMenuItem 
                        Header="Exit"
                        Command="{Binding ExitCommand, Mode=OneWay}" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Edit">
                
            </RibbonTab>
        </Ribbon>
        <ToolBar Grid.Row="1">
            <ToggleButton>
                <StackPanel>
                    <Image
                        Source="{StaticResource id3v1-logo}"  
                        Width="32"/>
                </StackPanel>
            </ToggleButton>
            <ToggleButton>
                <Image 
                    Source="{StaticResource id3v2-logo}"
                    Width="32"/>
            </ToggleButton>
        </ToolBar>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <tx:ExplorerTreeView
                x:Name="tree"
                Grid.Column="0"
                Command="{Binding ExpandNodeCommand, Mode=OneWay}"
                FilesFullPath="{Binding FilePathCollection, Mode=OneWayToSource}"
                FilesFilter="{Binding FilesFilter, Mode=OneTime}">
            </tx:ExplorerTreeView>
            <DataGrid
                x:Name="FilesDataGrid"
                Grid.Column="1"
                AutoGenerateColumns="False"
                IsEnabled="{Binding IsEnabledDataGrid}"
                ItemsSource="{Binding AudioFiles, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{Binding IsSelected}">
                        <DataGridCheckBoxColumn.Header>
                            <CheckBox 
                                DataContext="{Binding DataContext, ElementName=FilesDataGrid}"
                                IsThreeState="False"
                                IsChecked="{Binding SelectAll, Mode=TwoWay}"
                                Command="{Binding SelectAllCommand, Mode=OneWay}"/>
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridCheckBoxColumn
                        Header="Tag"
                        Binding="{Binding Tag}"/>
                    <DataGridTextColumn
                        Header="File Name"
                        Binding="{Binding FileName}"
                        Width="260"/>
                    <DataGridTextColumn
                        Header="Title"
                        Binding="{Binding Title}"
                        Width="150"/>
                    <DataGridTextColumn
                        Header="Album"
                        Binding="{Binding Album}"
                        Width="180"/>
                    <DataGridTextColumn
                        Header="Artist"
                        Binding="{Binding Artist}"
                        Width="100"/>
                    <DataGridTextColumn
                        Header="No."
                        Binding="{Binding TrackNumber}"/>
                    <DataGridComboBoxColumn
                        Header="Genre"
                        ItemsSource="{Binding Genres}"
                        SelectedItemBinding="{Binding Genre}"
                        Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <StatusBar 
            Grid.Row="3"
            Height="20">
            <TextBlock
                Text="{Binding ExpandPath, ElementName=tree}"/>
        </StatusBar>
    </Grid>
</RibbonWindow>
